@model List<WebDienThoai.Models.CartItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section bootstrap{

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
}

@section giohang{
    <div class="cart">
        <p>
            Welcome to our Online Store! <span>Cart:</span><div id="dd" class="wrapper-dropdown-2">
                @ViewBag.SoLuong item(s) - $0.00
                <ul class="dropdown">
                    <li>you have no items in your Shopping cart</li>
                </ul>
            </div>
        </p>

    </div>

}
@section jsFooter{

    <script src="/Assets/Client/js/controller/cartController.js"></script>
}
<h2>Giỏ hàng</h2>
<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã sản phẩm</td>
                        <td>Tên sản phẩm</td>
                        <td>Hình ảnh</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SanPham.ID</td>
                            <td>@item.SanPham.TenSP</td>
                            <td><img src="@item.SanPham.HinhAnh" width="100px" /></td>
                            <td><input type="text" class="txtquantity" data-id="@item.SanPham.ID" value="@item.quantity" /></td>
                            <td>@item.SanPham.Gia.GetValueOrDefault(0).ToString("N0")</td>
                            <td>@((item.SanPham.Gia.GetValueOrDefault(0)*item.quantity).ToString("N0"))</td>
                            <td><a href="#" data-id="@item.SanPham.ID" class="btn-delete btn btn-danger">Xóa</a></td>
                        </tr>
                    }

                </tbody>
            </table>
            <button id="btnContinue">Tiếp tục mua hàng</button>
            <button id="btnUpdate">Cập nhật giỏ hàng</button>
            <button id="btnDeleteAll">Xóa giỏ hàng</button>
            <button id="btnPayment">Thanh toán</button>
        }

        else
        {
            <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
        }

    </div>
</div>

